[push]
	default = simple
[alias]
  st = status
  co = checkout
  ci = commit
  ld = log --decorate
  p = pull
  oops = commit --amend --no-edit
  praise = blame
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase -i --autosquash
  w = whatchanged

[diff]
  renamelimit = 0

[color]
  diff = auto
  interactive = auto
  status = auto
  branch = auto

[push]
	default = current
